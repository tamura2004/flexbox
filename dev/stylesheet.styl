body
  font-family Helvetica,Arial, Roboto, "Droid Sans", "游ゴシック", YuGothic,"ヒラギノ角ゴ ProN W3","Hiragino Kaku Gothic ProN", "メイリオ",Meiryo, sans-serif

.flex-item
  display flex
  flex 1 1 10%
  // flex 1 1 auto
  position relative

.space-around
  justify-content space-around

.justify-center
  justify-content center

body,
.page
  background #222
  color white
  height 90vh
  width 100vw
  display flex
  flex-direction column

.rows
  @extend .flex-item
  flex-direction column

.cols
  @extend .flex-item

.box
  @extend .flex-item
  border 2px solid white
  border-radius 4px
  margin 4px
  padding 4px

h1
  font-size 24px

.clicked
  background white

.underline
  text-decoration underline

.center
  align-items center

for i in (1..10)
  .f{i}
    flex i 1 (10*i)%
    // flex i 1 auto

